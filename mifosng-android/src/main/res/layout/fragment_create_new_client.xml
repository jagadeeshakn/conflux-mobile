<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/tv_client_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="First Name :"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_client_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter client's first name"
        android:paddingTop="10dp" />

    <TextView
        android:id="@+id/tv_client_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Last Name :"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_client_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter client's last name"
        android:paddingTop="10dp" />

    <TextView
        android:id="@+id/tv_office"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Office :"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/sp_offices"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:spinnerMode="dropdown" />

    <CheckBox
        android:id="@+id/cb_client_active_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:checked="false"
        android:paddingTop="10dp"
        android:text="Client Active " />


    <TextView
        android:id="@+id/tv_submission_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textSize="20sp"
        android:visibility="gone" />
    <Button
        android:id="@+id/bt_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:text="Submit" />


</LinearLayout>